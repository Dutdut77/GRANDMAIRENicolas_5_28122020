{
  "root": true,
  "env": {
    "browser": true,
    // "commonjs": true,
    "es6": true,
    "node": true,
    "es2021":true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "indent": ["warn", 4, { "SwitchCase": 1 }],
    "linebreak-style": [
      "warn",
      "windows"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "no-unused-vars" : "warn",
    "semi": [
      "error",
      "always"
    ]
  }
}
